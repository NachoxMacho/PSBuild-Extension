{
	"name": "psbuild",
	"displayName": "PSBuild",
	"description": "Extra Powershell Support",
	"version": "0.0.2",
	"publisher": "RobOwens",
	"author": {
		"name": "Rob Owens",
		"url": "https://github.com/NachoxMacho"
	},
	"engines": {
		"vscode": "^1.65.2"
	},
	"repository": "https://github.com/NachoxMacho/PSBuild-Extension",
	"categories": [
		"Snippets",
		"Programming Languages",
		"Testing"
	],
	"activationEvents": [
		"onCommand:psbuild.helloWorld",
		"workspaceContains:**/psconfig.psd1"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "psbuild.helloWorld",
				"title": "Hello World"
			}
		],
		"configurationDefaults": {
			"powershell.codeFormatting.newLineAfterCloseBrace": false,
			"powershell.codeFormatting.pipelineIndentationStyle": "IncreaseIndentationForFirstPipeline",
			"powershell.codeFormatting.trimWhitespaceAroundPipe": true,
			"powershell.codeFormatting.useCorrectCasing": true,
			"powershell.codeFormatting.whitespaceBetweenParameters": true,
			"powershell.codeFormatting.autoCorrectAliases": true,
			"powershell.codeFormatting.preset": "OTBS",
			"editor.formatOnSave": true,
			"explorer.experimental.fileNesting.enabled": true,
			"explorer.experimental.fileNesting.patterns": {
				"*.ps1": "$(capture).Tests.ps1,$(capture).tests.ps1"
			}
		},
		"snippets": [
			{
				"language": "powershell",
				"path": "./snippets/powershell.json"
			}
		],
		"taskDefinitions": [
			{
				"type": "psbuild",
				"required": [
					"task"
				],
				"properties": {
					"task": {
						"type": "string",
						"description": "The PSBuild Task to customize"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"deploy": "vsce publish --yarn"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.65.2",
		"@typescript-eslint/eslint-plugin": "^5.15.0",
		"@typescript-eslint/parser": "^5.15.0",
		"@vscode/test-electron": "^2.1.2",
		"eslint": "^8.11.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.1",
		"typescript": "^4.5.5",
		"vsce": "^2.7.0"
	}
}
